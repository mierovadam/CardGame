<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MainActivity"
android:orientation="horizontal"
    android:background="@drawable/background">



    <!--left section-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/main_LBL_leftScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="90dp"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/main_IMG_leftPlayer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/main_LBL_leftScore"
            android:paddingLeft="10dp"
            android:src="@drawable/charmander" />

        <TextView
            android:id="@+id/main_LBL_leftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_IMG_leftPlayer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Adam"
            android:textColor="@color/black"
            android:textSize="30dp" />


    </RelativeLayout> <!--left section end-->

    <!--mid section-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/main_IMG_leftCard"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:src="@drawable/turned_card" />

        <ImageView
            android:id="@+id/main_IMG_rightCard"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/main_IMG_leftCard"
            android:src="@drawable/turned_card" />

        <Button
            android:id="@+id/main_BTN_next"
            android:layout_width="75dp"
            android:layout_height="50dp"
            android:layout_below="@id/main_IMG_rightCard"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="NEXT" />


    </RelativeLayout>  <!--mid section end-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/main_LBL_rightScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="90dp"
            android:text="0"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/main_IMG_rightPlayer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/main_LBL_rightScore"
            android:src="@drawable/squirtle"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/main_LBL_rightName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_IMG_rightPlayer"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Avi"
            android:textSize="30dp"
            android:textColor="@color/black"
            />
    </RelativeLayout> <!--right section-->

</LinearLayout>  <!--parent-->