<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".MainActivity">



    <!--left section-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/main_LBL_leftScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_IMG_leftPlayer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="70dp" />


        <ImageView
            android:id="@+id/main_IMG_leftPlayer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingLeft="10dp"
            android:src="@drawable/charmander"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/main_LBL_leftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_IMG_leftPlayer"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Adam"
            android:textColor="@color/black"
            android:textSize="30dp" />


    </RelativeLayout> <!--left section end-->

    <!--mid section-->
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/main_IMG_leftCard"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="90dp"
            android:src="@drawable/turned_card" />

        <ImageView
            android:id="@+id/main_IMG_rightCard"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/main_IMG_leftCard"
            android:src="@drawable/turned_card" />

        <Button
            android:id="@+id/main_BTN_next"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/main_IMG_leftCard"
            android:layout_centerHorizontal="true"
            android:text="NEXT"
            app:backgroundTint="#F44336" />


    </RelativeLayout>  <!--mid section end-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/main_LBL_rightScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/main_IMG_rightPlayer"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="16dp"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="70dp"
            />

        <ImageView
            android:id="@+id/main_IMG_rightPlayer"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingRight="10dp"
            android:src="@drawable/squirtle"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/main_LBL_rightName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_IMG_rightPlayer"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Avi"
            android:textColor="@color/black"
            android:textSize="30dp" />

    </RelativeLayout> <!--right section-->

</LinearLayout>  <!--parent-->